.small-6.small-offset-3.columns
  %fieldset
    %legend #{t('.localization')} #{@localization.name}
    .small-8.columns
      %h4 #{t('.name')}
      %p #{@localization.name}

      %h4 #{t('.uuid')}
      %code #{@localization.uuid}

      %h4 #{t('.owner')}
      %p #{@localization.owner.email}

      %h4 #{t('.created')}
      %p #{@localization.created_at}

      %h4 #{t('.updated')}
      %p #{@localization.updated_at}

      %h4 #{t('.locales')}
      %ul.locales
        - @localization.locales.each do |locale|
          %li
            = link_to "#{locale.name}", localization_locale_path(@localization, locale)
        %li
          = link_to t('.new_locale'), new_localization_locale_path(@localization)

    .small-4.columns
      %h4 Actions
      %ul.button-group
        %li
          = link_to t('.edit'), edit_localization_path(@localization), class: 'button tiny'
        %li
          = render partial: 'delete_form', locals: { localization: @localization }
