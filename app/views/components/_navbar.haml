%nav.top-bar{ :'data-topbar' => true, role: 'navigation' }
  %ul.title-area
    %li.name
      %h1
        %a{href: '#'} Jargon
    %li.toggle-topbar.menu-icon
      %a{href: true}
        %span Menu
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.has-dropdown
          %a{href: '#'} #{current_user.email}
          %ul.dropdown
            %li
              %a{href:'#'} Edit Account
            %li
              = link_to "Log Out", destroy_user_session_path, method: :delete
    %ul.left
      %li
        %a{href: '#'} Left
